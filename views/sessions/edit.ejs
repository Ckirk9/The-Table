<div class="text-dark">
<h1>Edit <%= session.title %></h1>
	<main>
		<div class="input-group mb-3">
			<span class="input-group-text" id="inputGroup-sizing-default">Session Details:</span>
			<input
				type="text"
				class="form-control"
				aria-label="Sizing example input"
				aria-describedby="inputGroup-sizing-default"
				action="/sessions/<%= session._id %>?_method=PUT" 
				method="post"
				/>
				<br/>
			<!-- <form ></form> -->
		</div>
		<div class="input-group mb-3">
				<span class="input-group-text" id="inputGroup-sizing-default">Title:</span>
				<input
					type="text"
					name="title"
					class="form-control"
					aria-label="Sizing example input"
					aria-describedby="inputGroup-sizing-default"
					value="<%= session.title %>" 
					required
				/><br/>
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text" id="inputGroup-sizing-default">Session Date:</span>
				<input
					type="date"
					name="sessionDate" 
					class="form-control"
					aria-label="Sizing example input"
					aria-describedby="inputGroup-sizing-default"
					value="<%= session.sessionDate %>" 
					required
				/><br/>
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text" id="inputGroup-sizing-default">Session Author:</span>
				<input
					type="text"
					name="author" 
					class="form-control"
					aria-label="Sizing example input"
					aria-describedby="inputGroup-sizing-default"
					value="<%= session.author %>" 
					required
				/><br/>
			<div class="input-group">
				<span class="input-group-text border-0">Summary:</span>
					<textarea class="form-control rounded" 
						name="body" 
						value="<%= session.body %> required" 
						aria-label="With textarea"> 
				</textarea>
			</div>
		</div>
		<input type="submit" class="btn btn-light btn-lg shadow-1-strong" value="Update Session" src=""/>
	</main>
</div>	

