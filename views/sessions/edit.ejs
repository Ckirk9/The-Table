<!-- opening nav tag in the layout.ejs -->
	<h1>Edit <%= session.title %></h1>
		<ul>
			<li>
				<a href="/" class="link-dark">Home</a>
			</li>
			<li>
				<a href="/sessions" class="link-dark">Sessions Index</a>
			</li>
		</ul>
