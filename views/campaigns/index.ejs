<h1 class="pg text-dark">Campaign Filter</h1>
    <div class="filter">
        <form action="/campaigns/filter" class="text-dark" method="POST">
            <div class="card card-light shadow-1-strong" style="width: 50rem;" id="form-card">
                <ul class="list-group list-group-flush rounded">
            <!-- Name: <input type="text" name="name"><br /> -->
            <!-- Dungeon Master: <input type="text" name="dungeonMaster"><br />
            Players: <input type="text" name="players"><br /> -->
            <li class="list-group-item">
                Genre: <select name="genre">
                    <option value="" selected>Any</option>
                    <option value="Fantasy">Fantasy</option>
                    <option value="Scifi">Sci-Fi</option>
                    <option value="Horror">Horror</option>
                    <option value="OSR">OSR</option>
                    <option value="Survival">Survival</option>
                    <option value="Other">Other</option>
                </select>
            </li>
            <br />
            <li class="list-group-item">
                Game System: <select name="gameSystem">
                    <option value="" selected>Any</option>
                    <option value="D&D5e">Dungeons & Dragons 5E</option>
                    <option value="D&D3.5e">Dungeons & Dragons 3.5</option>
                    <option value="Pathfinder1e">Pathfinder 1E</option>
                    <option value="Pathfinder2e">Pathfinder 2E</option>
                    <option value="VampireTheMasquerade5e">Vampire The Masquerade 5E</option>
                    <option value="WorldofDarkness">World of Darkness</option>
                    <option value="Pathfinder2e">Pathfinder 2E</option>
                    <option value="Other">Other</option>
                </select>
            </li>
            <br />
            <li class="list-group-item">
                Difficulty: <select name="difficulty">
                    <option value="" selected>Any</option>
                    <option value="Easy">Easy</option>
                    <option value="Medium">Medium</option>
                    <option value="Hard">Hard</option>
                </select>
            </li>
            <br />
            <li class="list-group-item">
                Has Open Slots: <input type="checkbox" name="openSlots">
            </li>
            <br />  
            <!-- Start Date: <input type="date" name="startDate"><br /> -->
            <!-- Description: <textarea name="description" placeholder="Description"></textarea><br> -->
            <button type="button" class="btn btn-light btn-lg">Filter</button>
            </ul>
        </div>
        </form>
    </div>
<br>

<h1 class="pg text-dark" >Campaigns</h1>
    <div>
        <% campaigns.forEach(campaign => { %>
            <a class="btn btn-light btn-lg btn-block shadow-1-strong" href='/campaigns/<%= campaign._id %>'><%= campaign.name %></a>
        <% }) %> 
    </div>
