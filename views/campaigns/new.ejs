<h1 class="pg text-dark">New Campaign</h1>
<form action="/campaigns" class="text-dark" method="POST">
    <div class="card card-light shadow-1-strong" style="width: 50rem;" id="form-card">
        <ul class="list-group list-group-flush rounded">
            <li class="list-group-item">
                Name: <input 
                    type="text" 
                    name="name" 
                    required>
            </li>
            <br />
                Dungeon Master: <input 
                    type="text" 
                    name="dungeonMaster" 
                    required>
            </li>
            <br />
            <li class="list-group-item">
                Players: <input 
                    type="text" 
                    name="players" 
                    required>
            </li>
            <br />
            <li class="list-group-item">
                Open Slots: <input 
                    type="number" 
                    name="openSlots" 
                    required 
                    max:6>
            </li>
            <br /> 
            <li class="list-group-item">
                Genre: <select name="genre" required>
                    <option value="Fantasy">Fantasy</option>
                    <option value="Scifi">Scifi</option>
                    <option value="Horror">Horror</option>
                    <option value="OSR">OSR</option>
                    <option value="Survival">Survival</option>
                    <option value="Other">Other</option>
                </select>
            </li>
            <br />
            <li class="list-group-item">
                Game System: <select name="gameSystem" required>
                    <option value="D&D">D&D</option>
                    <option value="3D">3D</option>
                    <option value="4D">4D</option>
                </select>
            </li>
            <br />
            <li class="list-group-item">
                Difficulty: <select name="difficulty" required>
                    <option value="Easy">Easy</option>
                    <option value="Medium">Medium</option>
                    <option value="Hard">Hard</option>
                </select>   
            </li>
            <br />
            <li class="list-group-item">
                Start Date: <input 
                    type="date" 
                    name="startDate" 
                    required>
            </li>
            <br />
            <li class="list-group-item">
                Description: <br> <textarea 
                    name="description" 
                    placeholder="Description" 
                    required>
                </textarea>
            </li>
            <br>
            <input type="submit" class="btn btn-light btn-lg btn-block shadow-1-strong" value="Create Campaign">
        </ul>
    </div>
</form>